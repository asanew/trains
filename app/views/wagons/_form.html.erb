<%= form_with(model: [train, wagon], url: train_wagons_path(train), local: true) do |form| %>
    <%= render 'common/error', resource: wagon %>

    <div class="field">
      <%= form.label 'Train' %>
      <%= form.collection_select :train_id, Train.all, :id, :number %>
      <%= form.label 'Wagon type' %>
      <%= form.collection_select :type, Wagon.wagon_types, :to_s, :to_s %>
      <%= form.label :top_seats %>
      <%= form.text_field :top_seats %>
      <%= form.label :bottom_seats %>
      <%= form.text_field :bottom_seats %>
      <%= form.label :side_top_seats %>
      <%= form.text_field :side_top_seats %>
      <%= form.label :side_bottom_seats %>
      <%= form.text_field :side_bottom_seats %>
      <%= form.label :seat_places %>
      <%= form.text_field :seat_places %>
    </div>

    <div class="actions">
      <%= form.submit 'Save' %>
    </div>
<% end %>